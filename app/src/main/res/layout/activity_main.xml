<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acvtivities.MainActivity"
    android:orientation="vertical">


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="AdminApp"
    android:layout_gravity="center"
    android:gravity="center"
    android:textSize="30sp"
    android:layout_marginTop="20dp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    />
    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:sliderAnimationDuration="400"
        app:sliderAutoCycleDirection="right"
        app:sliderAutoCycleEnabled="true"
        app:sliderCircularHandlerEnabled="true"
        app:sliderIndicatorAnimationDuration="400"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="false"
        android:layout_marginTop="10dp"
       />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:orientation="vertical"
       android:background="@drawable/background"
       android:layout_margin="10dp">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="LOGIN"
           android:gravity="center"
           android:textColor="@color/colorwhite"
           android:layout_marginTop="3dp"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="using existing Admin account"
           android:gravity="center"
           android:textColor="@color/colorwhite"/>

   </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enjoy serving food"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

</LinearLayout>