<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acvtivities.OtpAvtivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<ImageView
    android:id="@+id/messageimg"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@drawable/mobilemessage"
    android:layout_marginTop="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"

    />
    <TextView
        android:id="@+id/otptxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/otp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/messageimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:id="@+id/edtotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter OTP"
        app:layout_constraintTop_toBottomOf="@+id/otptxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Verify"
        app:layout_constraintTop_toBottomOf="@+id/edtotp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorRed"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>