<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment"
    android:orientation="vertical">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="Settings"/>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

<FrameLayout
    android:id="@+id/frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="50dp">


   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/imgprofile"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@drawable/yash"
       app:civ_border_color="@android:color/black"
       app:civ_border_width="2dp"

       />
<ImageView
    android:id="@+id/imgedit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_edit_black"
    android:layout_marginLeft="80dp"
    />
</FrameLayout>

      <ImageView
          android:id="@+id/nameimage"
          android:layout_width="30dp"
          android:layout_height="30dp"
          app:layout_constraintTop_toBottomOf="@+id/frame"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:srcCompat="@drawable/ic_supervisor_account_black_24dp"
          android:layout_marginRight="320dp"
          android:layout_marginTop="40dp"
         />
      <TextView
          android:id="@+id/txtname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/frame"
          app:layout_constraintStart_toEndOf="@+id/nameimage"
          android:layout_marginTop="45dp"
          android:text="Your Name "
          android:layout_marginLeft="30dp"
          />
      <View
          android:id="@+id/viewname"
          android:layout_width="0dp"
          android:layout_height="0.5dp"
          app:layout_constraintTop_toBottomOf="@+id/nameimage"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@android:color/black"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="20dp"/>

      <ImageView
          android:id="@+id/phoneimage"
          android:layout_width="30dp"
          android:layout_height="30dp"
          app:layout_constraintTop_toBottomOf="@+id/viewname"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:srcCompat="@drawable/ic_phone_black"
          android:layout_marginRight="320dp"
          android:layout_marginTop="40dp"
          />
      <TextView
          android:id="@+id/txtnum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/viewname"
          app:layout_constraintStart_toEndOf="@+id/phoneimage"
          android:layout_marginTop="45dp"
          android:text="77779374774"
          android:layout_marginLeft="30dp"
          />
      <View
          android:id="@+id/viewphone"
          android:layout_width="0dp"
          android:layout_height="0.5dp"
          app:layout_constraintTop_toBottomOf="@+id/phoneimage"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@android:color/black"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="20dp"/>

      <ImageView
          android:id="@+id/emailimage"
          android:layout_width="30dp"
          android:layout_height="30dp"
          app:layout_constraintTop_toBottomOf="@+id/viewphone"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:srcCompat="@drawable/ic_email"
          android:layout_marginRight="320dp"
          android:layout_marginTop="40dp"
          />
      <TextView
          android:id="@+id/txtemail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/viewphone"
          app:layout_constraintStart_toEndOf="@+id/emailimage"
          android:layout_marginTop="45dp"
          android:text="latheshkn01@gmail.com"
          android:layout_marginLeft="30dp"
          />
      <View
          android:id="@+id/viewemail"
          android:layout_width="0dp"
          android:layout_height="0.5dp"
          app:layout_constraintTop_toBottomOf="@+id/txtemail"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@android:color/black"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="20dp"/>

      <Switch
          android:id="@+id/seekbarlogout"
          android:layout_width="50dp"
          android:layout_height="20dp"
          android:thumbTint="@color/colorAccent"
          app:layout_constraintTop_toBottomOf="@+id/viewemail"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="20dp"
          android:checked="true"
          android:layout_marginRight="20dp"

          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/viewemail"
          app:layout_constraintStart_toStartOf="parent"
          android:text="LOGOUT"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="32dp"
          android:textColor="@color/colorRed"/>

   </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>