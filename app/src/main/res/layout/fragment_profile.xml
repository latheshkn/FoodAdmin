<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment"
    android:orientation="vertical">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/imgprofile"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:src="@drawable/yash"
       app:civ_border_color="@android:color/black"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:civ_border_width="2dp"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="50dp"
       />

      <ImageView
          android:id="@+id/nameimage"
          android:layout_width="30dp"
          android:layout_height="30dp"
          app:layout_constraintTop_toBottomOf="@+id/imgprofile"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:srcCompat="@drawable/ic_supervisor_account_black_24dp"
          android:layout_marginRight="320dp"
          android:layout_marginTop="40dp"
         />
      <TextView
          android:id="@+id/txtname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/imgprofile"
          app:layout_constraintStart_toEndOf="@+id/nameimage"
          android:layout_marginTop="45dp"
          android:text="Your Name "
          android:layout_marginLeft="30dp"
          />
      <View
          android:id="@+id/viewname"
          android:layout_width="0dp"
          android:layout_height="0.5dp"
          app:layout_constraintTop_toBottomOf="@+id/nameimage"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@android:color/black"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="20dp"/>

      <ImageView
          android:id="@+id/phoneimage"
          android:layout_width="30dp"
          android:layout_height="30dp"
          app:layout_constraintTop_toBottomOf="@+id/viewname"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:srcCompat="@drawable/ic_phone_black"
          android:layout_marginRight="320dp"
          android:layout_marginTop="40dp"
          />
      <TextView
          android:id="@+id/txtnum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/viewname"
          app:layout_constraintStart_toEndOf="@+id/phoneimage"
          android:layout_marginTop="45dp"
          android:text="77779374774"
          android:layout_marginLeft="30dp"
          />
      <View
          android:id="@+id/viewphone"
          android:layout_width="0dp"
          android:layout_height="0.5dp"
          app:layout_constraintTop_toBottomOf="@+id/phoneimage"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@android:color/black"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="20dp"/>

      <ImageView
          android:id="@+id/emailimage"
          android:layout_width="30dp"
          android:layout_height="30dp"
          app:layout_constraintTop_toBottomOf="@+id/viewphone"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:srcCompat="@drawable/ic_email"
          android:layout_marginRight="320dp"
          android:layout_marginTop="40dp"
          />
      <TextView
          android:id="@+id/txtemail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/viewphone"
          app:layout_constraintStart_toEndOf="@+id/emailimage"
          android:layout_marginTop="45dp"
          android:text="latheshkn01@gmail.com"
          android:layout_marginLeft="30dp"
          />
      <View
          android:id="@+id/viewemail"
          android:layout_width="0dp"
          android:layout_height="0.5dp"
          app:layout_constraintTop_toBottomOf="@+id/txtemail"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@android:color/black"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="20dp"/>

   </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>