<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/oncustomerdp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cheers"
                    app:civ_border_color="@android:color/black"
                    app:civ_border_width="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="300dp"

                    />

                <TextView
                    android:id="@+id/txtoncustomername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/oncustomerdp"
                    android:text="Lathesh"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/txttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtoncustomername"
                    app:layout_constraintStart_toEndOf="@+id/oncustomerdp"
                    android:layout_marginRight="200dp"
                    android:layout_marginLeft="20dp"
                    android:text="Today at 12:00 a.m"/>
                <TextView
                    android:id="@+id/txtorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    android:text="Order Id:324"/>
                <TextView
                    android:id="@+id/txttotalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtorder"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/price"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/txtdishtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhal makhani"
                    app:layout_constraintTop_toBottomOf="@+id/oncustomerdp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="28dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty:2"
                    app:layout_constraintTop_toBottomOf="@+id/oncustomerdp"
                    app:layout_constraintStart_toEndOf="@+id/txtdishtitle"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    />
                <TextView
                    android:id="@+id/itemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B954.00"
                    app:layout_constraintTop_toBottomOf="@+id/oncustomerdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:id="@+id/txtorderstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status:"
                    app:layout_constraintTop_toBottomOf="@+id/itemprice"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/txtdispatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Delivered:"
                    app:layout_constraintTop_toBottomOf="@+id/itemprice"
                    app:layout_constraintStart_toEndOf="@+id/txtorderstatus"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorRed"/>
                <Button
                    android:id="@+id/btnviewdetails"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="View Details"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toBottomOf="@+id/txtdishtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/rippel_outline"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>